{{- /* ============================================================
File: layouts/_default/rss.xml
Purpose: Enhanced RSS feed for automation and social posting
Author: eQualle System (Hugo)
Last Updated: 2025-11-10
============================================================ */ -}}

{{- /* ===== Author info (deprecated fallback supported) ===== */ -}}
{{- $authorEmail := "" }}
{{- $authorName := "" }}

{{- with site.Params.author }}
  {{- if reflect.IsMap . }}
    {{- with .email }}{{ $authorEmail = . }}{{ end }}
    {{- with .name }}{{ $authorName = . }}{{ end }}
  {{- else }}
    {{- $authorName = . }}
  {{- end }}
{{- else }}
  {{- with site.Author }}
    {{- with .email }}{{ $authorEmail = . }}{{ end }}
    {{- with .name }}{{ $authorName = . }}{{ end }}
  {{- end }}
{{- end }}

{{- $pctx := . }}
{{- if .IsHome }}{{ $pctx = site }}{{ end }}
{{- $pages := slice }}
{{- if or $.IsHome $.IsSection }}
  {{- $pages = $pctx.RegularPages }}
{{- else }}
  {{- $pages = $pctx.Pages }}
{{- end }}
{{- $limit := site.Config.Services.RSS.Limit }}
{{- if ge $limit 1 }}
  {{- $pages = $pages | first $limit }}
{{- end }}

{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0"
     xmlns:atom="http://www.w3.org/2005/Atom"
     xmlns:content="http://purl.org/rss/1.0/modules/content/"
     xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title>{{ if eq .Title site.Title }}{{ site.Title }}{{ else }}{{ .Title }} on {{ site.Title }}{{ end }}</title>
    <link>{{ .Permalink }}</link>
    <description>Recent posts on {{ site.Title }}</description>

    {{- with site.Params.images }}
    <image>
      <title>{{ site.Title }}</title>
      <url>{{ index . 0 | absURL }}</url>
      <link>{{ site.BaseURL }}</link>
    </image>
    {{- end }}

    <generator>Hugo {{ hugo.Version }}</generator>
    <language>{{ site.Language.LanguageCode }}</language>

    {{- with $authorEmail }}
      <managingEditor>{{.}}{{ with $authorName }} ({{ . }}){{ end }}</managingEditor>
      <webMaster>{{ . }}{{ with $authorName }} ({{ . }}){{ end }}</webMaster>
    {{- end }}

    {{- with site.Copyright }}
      <copyright>{{ . | markdownify | plainify | strings.TrimPrefix "© " }}</copyright>
    {{- end }}

    {{- if not .Date.IsZero }}
      <lastBuildDate>{{ (index $pages.ByLastmod.Reverse 0).Lastmod.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>
    {{- end }}

    {{- with .OutputFormats.Get "RSS" }}
      {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end }}

    {{- range $pages }}
    {{- if and (ne .Layout `search`) (ne .Layout `archives`) }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <guid isPermaLink="true">{{ .Permalink }}</guid>
      <pubDate>{{ .PublishDate.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>

      {{- with $authorEmail }}
      <author>{{ . }}{{ with $authorName }} ({{ . }}){{ end }}</author>
      {{- end }}

      {{- if .Params.categories }}
        {{- range .Params.categories }}
          <category>{{ . }}</category>
        {{- end }}
      {{- end }}

      {{- if .Params.tags }}
        {{- range .Params.tags }}
          <category>{{ . }}</category>
        {{- end }}
      {{- end }}

      {{- /* --- Description and Summary --- */ -}}
      <description>{{ with .Description | html }}{{ . }}{{ else }}{{ .Summary | html }}{{ end }}</description>
      <summary>{{ .Summary | html }}</summary>

      {{- /* --- Include main image --- */ -}}
      {{- with .Params.image }}
        <media:content url="{{ . | absURL }}" medium="image" />
      {{- else }}
        {{- with .Resources.GetMatch "hero*" }}
          <media:content url="{{ .Permalink }}" medium="image" />
        {{- end }}
      {{- end }}

      <!-- === Social Cards (eQualle) === -->
      {{- with .Params.cards }}
        {{- with .facebook }}
          {{- $u := . | absURL }}
          <media:content url="{{ $u }}" medium="image" />
          <media:thumbnail url="{{ $u }}" />
          <enclosure url="{{ $u }}" type="image/jpeg" />
        {{- end }}

        {{- with .instagram }}
          {{- $u := . | absURL }}
          <media:content url="{{ $u }}" medium="image" />
          <media:thumbnail url="{{ $u }}" />
          <enclosure url="{{ $u }}" type="image/jpeg" />
        {{- end }}

        {{- with .pinterest }}
          {{- $u := . | absURL }}
          <media:content url="{{ $u }}" medium="image" />
          <media:thumbnail url="{{ $u }}" />
          <enclosure url="{{ $u }}" type="image/jpeg" />
        {{- end }}

        {{- with .twitter }}
          {{- $u := . | absURL }}
          <media:content url="{{ $u }}" medium="image" />
          <media:thumbnail url="{{ $u }}" />
          <enclosure url="{{ $u }}" type="image/jpeg" />
        {{- end }}
      {{- else }}
        {{- /* Fallback: старый вариант по файловой системе */ -}}
        {{- $year := .Date.Format "2006" }}
        {{- $month := .Date.Format "01" }}
        {{- $day := .Date.Format "02" }}
        {{- $slug := .Slug }}

        {{- $cardsPath := printf "blog_src/content/posts/%s/%s/%s/%s/cards" $year $month $day $slug }}
        {{- $cardsURL := printf "%s/posts/%s/%s/%s/%s/cards" site.BaseURL $year $month $day $slug $slug }}

        <!-- Facebook -->
        {{- $fb := printf "%s/facebook/%s.jpg" $cardsPath $slug }}
        {{- if fileExists $fb }}
          {{- $fbURL := printf "%s/facebook/%s.jpg" $cardsURL $slug }}
          <media:content url="{{ $fbURL }}" medium="image" />
          <media:thumbnail url="{{ $fbURL }}" />
          <enclosure url="{{ $fbURL }}" type="image/jpeg" />

          <!-- Twitter (используем ту же карточку, что и для Facebook) -->
          <media:content url="{{ $fbURL }}" medium="image" />
          <media:thumbnail url="{{ $fbURL }}" />
          <enclosure url="{{ $fbURL }}" type="image/jpeg" />
        {{- end }}

        <!-- Instagram -->
        {{- $ig := printf "%s/instagram/%s.jpg" $cardsPath $slug }}
        {{- if fileExists $ig }}
          {{- $igURL := printf "%s/instagram/%s.jpg" $cardsURL $slug }}
          <media:content url="{{ $igURL }}" medium="image" />
          <media:thumbnail url="{{ $igURL }}" />
          <enclosure url="{{ $igURL }}" type="image/jpeg" />
        {{- end }}

        <!-- Pinterest -->
        {{- $pin := printf "%s/pinterest/%s.jpg" $cardsPath $slug }}
        {{- if fileExists $pin }}
          {{- $pinURL := printf "%s/pinterest/%s.jpg" $cardsURL $slug }}
          <media:content url="{{ $pinURL }}" medium="image" />
          <media:thumbnail url="{{ $pinURL }}" />
          <enclosure url="{{ $pinURL }}" type="image/jpeg" />
        {{- end }}
      {{- end }}

      {{- /* --- Optional: estimated reading time --- */ -}}
      <readingTime>{{ .ReadingTime }}</readingTime>

      {{- /* --- Full HTML if enabled --- */ -}}
      {{- if and site.Params.ShowFullTextinRSS .Content }}
        <content:encoded><![CDATA[{{ .Content | safeHTML }}]]></content:encoded>
      {{- end }}
    </item>
    {{- end }}
    {{- end }}
  </channel>
</rss>
